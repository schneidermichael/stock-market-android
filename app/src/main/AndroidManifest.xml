<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.schn142.stockmarket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <activity
            android:name=".StockListActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action
                    android:name="android.intent.action.MAIN" />
                <category
                    android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".StockListDetailActivity">
        </activity>

        <activity
            android:name=".StockSearchActivity"
            android:parentActivityName=".StockListActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".StockListActivity"/>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MapActivity"
            android:label="@string/title_activity_map">
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/action_settings"
            android:parentActivityName=".StockListActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StockListActivity"/>
        </activity>



    </application>

</manifest>