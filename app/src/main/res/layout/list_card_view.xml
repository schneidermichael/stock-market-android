<?xml version="1.0" encoding="utf-8"?>
    <!-- A CardView that contains a TextView -->
    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        card_view:cardElevation="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/cardTextViewSymbol"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/element_symbol"
            android:textAlignment="textStart"/>
        <TextView
            android:id="@+id/cardTextViewCompanyName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/element_company_name"
            android:textAlignment="textStart"/>
        <TextView

            android:id="@+id/cardTextViewLatestPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/element_latest_price"
            android:textAlignment="textStart"/>
        <TextView
            android:id="@+id/cardTextViewChangePercent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/element_change_percent"
            android:textColor="@color/white"/>
    </LinearLayout>


    </androidx.cardview.widget.CardView>
